<div class="container">
  <h1>Saved articles</h1>
  {{#each articles}}
    <div class="card bg-light mb-3">
      <div class="card-body">
        <h5 class="card-title">{{this.title}}</h5>
        <p class="card-text">{{this.intro}}...</p>
        <a href="{{this.link}}" class="card-link" target="_blank">View article</a>
        <a data-id="{{this._id}}" class="btn btn-primary unsave-btn">Remove from saved</a>
        <a data-id="{{this._id}}" class="btn btn-primary note-modal-btn" data-toggle="modal">Add note</a>
      </div>
    </div>
  {{/each}}
</div>


<div id="add-note-modal" class="modal" tabindex="-1" role="dialog">
  <div class="modal-dialog" role="document">
    <div class="modal-content">
      <div class="modal-header">
        <h5 id="note-modal-title" class="modal-title"></h5>
      </div>
      <div class="modal-body container">
        <p class="existing-notes-body"></p>
        <ul>
          {{#each notes}}
          <li>{{this.body}}
            <button type="button" class="btn btn-danger delete-note-modal" data-id="{{this._id}}">Delete note</button>
          </li>
          {{/each}}
        </ul>
        <hr>
        <form action="/submit" method="post">
          <textarea id="note-body" type="text" name="body" required></textarea>
        </form>
      </div>
      <div class="modal-footer">
        <button type="button" class="btn btn-secondary" data-dismiss="modal">Cancel</button>
        <button type="button" class="btn btn-primary note-save-btn">Save note</button>

      </div>
    </div>
  </div>
</div>