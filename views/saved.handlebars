<nav class="navbar navbar-expand-lg navbar-light bg-light">
<a class="navbar-brand" href="#">Tech News Scraper</a>
<div class="collapse navbar-collapse" id="navbarNavAltMarkup">
  <div class="navbar-nav">
    <a class="nav-item nav-link active" href="/">Home</a>
    <a class="nav-item nav-link" href="/saved">Saved articles</a>
  </div>
</div>
</nav>

<div class="jumbotron jumbotron-fluid text-center">
<h1 class="display-4">Tech News</h1>
<p class="lead">Get the lastest tech news</p>
</div>

<div class="container">
  <h1>Saved articles</h1>
  {{#each articles}}
    <div class="card bg-light mb-3">
      <div class="card-body">
        <h5 class="card-title">{{this.title}}</h5>
        <p class="card-text">{{this.intro}}...</p>
        <a href="{{this.link}}" class="card-link" target="_blank">View article</a>
        <a data-id="{{this._id}}" class="btn btn-primary unsave-btn">Remove from saved</a>
        <a data-id="{{this._id}}" class="btn btn-primary note-modal-btn" data-toggle="modal">Add note</a>
      </div>
    </div>
  {{/each}}
</div>


<div id="add-note-modal" class="modal" tabindex="-1" role="dialog">
  <div class="modal-dialog" role="document">
    <div class="modal-content">
      <div class="modal-header">
        <h5 id="note-modal-title" class="modal-title"></h5>
      </div>
      <div class="modal-body container">
        <p class="existing-notes-body"></p>
        <ul class="notes-list">
        </ul>
        <div class="form-group">
          <label for="note-area">New note</label>
          <textarea name="new-note-area" class="form-control" id="note-body" rows="2" required></textarea>
        </div>
        <div class="modal-footer">
          <button type="button" class="btn btn-secondary" data-dismiss="modal">Cancel</button>
          <button type="button" class="btn btn-primary note-save-btn">Save</button>

        </div>
      </div>
    </div>
  </div>